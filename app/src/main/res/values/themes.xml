<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TypeDance" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_150</item>
        <item name="colorPrimaryDark">@color/purple_150</item>
        <item name="colorAccent">@color/yellow_100</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginPage" parent = "Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple_150</item>
        <item name="colorPrimaryDark">@color/purple_150</item>
        <item name="colorAccent">@color/yellow_100</item>
        <item name="android:statusBarColor" tools:TargetApi="l">@color/purple_150</item>
    </style>

    <style name="Main" parent = "Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple_150</item>
        <item name="colorPrimaryDark">@color/purple_150</item>
        <item name="colorAccent">@color/purple_150</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/purple_100</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/purple_150</item>
        <item name="colorPrimaryDark">@color/purple_150</item>
        <item name="colorAccent">@color/yellow_100</item>
    </style>

    <style name="Theme.HorizontalRecyclerView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_150</item>
        <item name="colorPrimaryDark">@color/pink_100</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:statusBarColor" tools:TargetApi="l">@color/yellow_100</item>
    </style>

    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>
</resources>